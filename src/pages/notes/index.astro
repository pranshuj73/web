---
import { getCollection } from "astro:content";
import PostList from "@/layouts/PostList.astro";

const posts = (await getCollection("notes", ({ data }) => !data.hidden)).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<PostList
    posts={posts}
    heading={"on this corner of my site you'll find notes i've taken whilst learning & exploring certain topics [[warning: some notes might be incomplete stubs]]"}
    collectionType="notes"
/>

