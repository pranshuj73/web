---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Base.astro';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout>
  <section class="py-20">
    <div class="space-y-8">
      <h1 class="section-title">Blog</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {posts.map((post) => (
          <article class="card group">
            <a href={`/blog/${post.id}/`} class="block">
              {post.data.heroImage && (
                <div class="mb-4 overflow-hidden rounded-lg">
                  <Image 
                    width={720} 
                    height={360} 
                    src={post.data.heroImage} 
                    alt={post.data.title}
                    class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                </div>
              )}
              <h2 class="text-xl font-semibold text-white mb-2 group-hover:text-blue-400 transition-colors">
                {post.data.title}
              </h2>
              <p class="text-neutral-400 text-sm">
                <FormattedDate date={post.data.pubDate} />
              </p>
              {post.data.description && (
                <p class="text-neutral-300 mt-3 leading-relaxed">
                  {post.data.description}
                </p>
              )}
            </a>
          </article>
        ))}
      </div>
      
      {posts.length === 0 && (
        <div class="text-center py-12">
          <p class="text-neutral-400 text-lg">No blog posts yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>
</Layout>
