---
import { getCollection } from "astro:content";
import PostList from "@/layouts/PostList.astro";

const posts = (await getCollection("blog", ({ data }) => !data.hidden)).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<PostList
  heading={"here you can find all my thoughts dumped in a neatly organized & readable format."}
  posts={posts}
  collectionType="blog"
/>

