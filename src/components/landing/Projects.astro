---
import projectsData from '../../data/projects.json';
import SectionHeading from '../ui/SectionHeading.astro';
import { getColorFromHash } from '../../utils/colorHash';
const projects = projectsData.projects;
---

<section class="space-y-4">
  <SectionHeading command="cat" heading="projects" extension="json" />
  
  <div class="space-y-4">
    {projects.map(project => (
      <div class="flex flex-wrap items-start justify-between space-y-1">
        <div class="flex flex-col space-y-1">
          <div class="font-semibold flex items-center space-x-2">
            <div class={`w-2 h-2 bg-${getColorFromHash(project.name)}-500 rounded-full`}></div>
            <span class="font-semibold">{project.name}</span>
          </div>
          <p class="text-neutral-400 text-sm">{project.description}</p>
        </div>
        <a href={project.url} target="_blank" rel="noopener noreferrer" class="text-neutral-400 text-sm">
          View Project â†’
        </a> 
      </div>
    ))}
  </div>
</secti> 
